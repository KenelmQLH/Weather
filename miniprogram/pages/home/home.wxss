/* pages/home/home.wxss */
.title{
  position:absolute;
  top:0;
  width:100%;
  height:10vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.appname{
  height:5vh;
  text-align:center;
  color:white;
  font-size:28rpx;
  line-height:5vh;
}

.table{
  width:95%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:10rpx;
  box-sizing: border-box;
}
.left{
  margin-left: 3vw;
  width:200rpx;
  height:50rpx;
  color:white;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.left-pic{
  width:50rpx;
  height:50rpx;
  margin-left:10rpx;
}
.left-txt{
  margin-left:10rpx;
  font-size:28rpx;
  display: inline-block;
  height:47rpx;
  line-height: 47rpx;
}
.right{
  
  width:180rpx;
  height:50rpx;
  color:white;
}




.scroll-container{
  width:100%;
  height:60vh;
  
  box-sizing: border-box;
}

.city{
  width:650rpx;
  height:200rpx;
  margin:0rpx 40rpx 50rpx 60rpx;

  border-radius: 30rpx;
  background-color:-webkit-linear-gradient(top,#50c3e9,#286cf5,#031fff);
  /*background-color:#f9fdfc;
  background-color:yellow;*/

  box-shadow: -10rpx 10rpx 20rpx #9fb1b0;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.city-adjust{
  margin-top:20rpx;
}
.city-name{
  width:180rpx;
  height:80rpx;
  margin:0 25rpx 0 25rpx;
  font-size: 34rpx;
  color: #4b4a4a;
  text-align: center;
  line-height:80rpx;

  border-radius:60rpx;
  background-color:#ecf0f5 ;
}
.wea-img{
  width:150rpx;
  height:150rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}
.wea-temp{
  width:200rpx;
  height:100rpx;
  color: white;

  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items:center;  
}
.tem1{
  height:90rpx;

  font-size:80rpx;
  line-height: 90rpx;
  margin-right:10rpx;
}
.tem2{
  height:40rpx;

  font-size:32rpx;
}
.delete-box{
  display: inline-block;
  width:60rpx;
  height:60rpx;
  border:gray 4rpx solid;
  border-radius:50%; 
  /*
  -moz-box-shadow:-5px 3px 5px #999 inset;             
	-webkit-box-shadow:-5px 3px 5px #999 inset;          
	box-shadow:-5px 3px 5px #999 inset;                   
  */
}
.delete-choose{
  width:55rpx;
  height:55rpx;
  margin:auto;
}





.add-city{
  position:absolute;
  bottom:0;

  width: 100%;
  height:10vh;
  display: flex;
  justify-content: center;
  align-items: center;
}